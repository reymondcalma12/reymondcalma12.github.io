@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> signManager;
@using Sample.Models

@if(signManager.IsSignedIn(User)){

}

<div class="collapse navbar-collapse " id="navbarNavDarkDropdown">
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle mx-5" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @Model.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarDarkDropdownMenuLink">
                <li>
                    <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                        View Profile
                    </button>
                    <a class="dropdown-item" asp-action="Logout" asp-controller="Account">
                       Logout
                    </a>
                </li>
            </ul>
        </li>
    </ul>
</div>

<style>
    .dropdown-item.active, .dropdown-item:active {
        color: white;
        text-decoration: none;
        background-color: gray;
    }
    .dropdown a, .dropdown button{
        font-family: 'Montserrat', sans-serif;
    }
    .modal-dialog {
        height: 80vh;
        max-height: 80vh;
    }

    .modal-content {
        height: 80%;
        border-radius: 2rem;
    }

    .modal-header{
        border-bottom: none;
        height:15%;
    }

     .head{
        margin-left:5%;
     }

     .head h4{
         font-family: 'Montserrat', sans-serif;
     }


    .modal-body {
        display: flex;
        flex-direction: column;
        position: relative;
        flex: 1 1 auto;
    }
    .prof1{
        height: 40%;
        display:flex;
        flex-direction:column;
        justify-content: space-between;
    }

    button.close.btn.btn-outline-dark.profBtn {
        border-radius: 50%;
    }
    .prof2{
        background: #F0F0F0;
        height: 60%;
        border-radius:2rem;
        margin: 0 2%;
    }

    .profilePicture{
        height: 60%;
        width: 21%;
        align-self: center;
        border-radius: 50%;
        display:inline-block;

    }

    .profilePicture img{
        object-fit: cover;
        height:100%;
        width:100%;
       border-radius: 50%;
    }

    .profilePersonal{
        height: 20%;
        width:60%;
        align-self:center;
        border-bottom:1px solid black;
        justify-self:start;
        margin-bottom:2%;
    }
    .profilePersonal h5{
        font-family: 'Montserrat', sans-serif;
    }
    .prof21{
        height:40%;
        display:flex;
        flex-direction:row;
        justify-content:space-around;
        align-items:center;
    }
    .prof21 h5, .prof21 h6{
        font-family: 'Montserrat', sans-serif;        
    }
    .prof22 h5, .prof22 h6{
        font-family: 'Montserrat', sans-serif;        
    }
    .prof22{
        height: 40%;
        border-top: 1px solid black;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        margin:0 10%;
    }

    .prof23{
        height:20%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .selectt {
        position: fixed;
        top: 30%;
        right: 38%;
        width: 7.8%;
    }
</style>
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex">

                <div class="d-flex w-100 justify-content-center head">
                    <h4 class="modal-title text-center">Your Profile</h4>
                </div>
             
                <button type="button" class="close btn btn-outline-dark profBtn" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="prof1">
                    <div class="profilePicture">
                        <img src="~/images/we.jpg"/>
                    </div>
                    <div class="profilePersonal text-center">
                        <h5>@Model.Name</h5>
                    </div>
                </div>
                <div class="prof2">
                    <div class="prof21">
                        <h6>Email:</h6>
                        <h6>@Model.Email</h6>
                    </div>
                    <div class="prof22">
                        <h6>Phone Number:</h6>
                        <h6>0991-835-6775</h6>
                    </div>
                    <div class="prof23">
                        <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModalCenter2" style="border-radius:.8rem;">
                            Edit Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex">

                <div class="d-flex w-100 justify-content-center head">
                    <h4 class="modal-title text-center">Your Profile</h4>
                </div>

                <button type="button" class="close btn btn-outline-dark profBtn" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="prof1">
                    <div class="profilePicture">
                        <img src="~/images/we.jpg" />
                        <input type="file" accept="image" class="form-control selectt"/>
                    </div>
                    <div class="profilePersonal text-center">
                        <h5><input type="text" value="@Model.Name" style="border:none;" class="text-center"/></h5>
                    </div>
                </div>
                <div class="prof2">
                    <div class="prof21">
                        <h6>Email:</h6>
                        <h6><input type="text" value="@Model.Email" style="border:none; background:#F0F0F0;" class="text-center" /></h6>
                    </div>
                    <div class="prof22">
                        <h6>Phone Number:</h6>
                        <h6><input type="text" value="0991-835-6775" style="border:none; background:#F0F0F0;" class="text-center" /></h6>
                    </div>
                    <div class="prof23">
                        <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModalCenter2" style="border-radius:.8rem;">
                            Done
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>