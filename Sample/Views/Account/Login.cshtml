@using Sample.Models.ViewModel

@model LoginVm

@{
    ViewData["Title"] = "Login";
}
<div class="container d-flex flex-column align-items-center justify-content-center " 
   style="border:1px solid black; height:90vh;">
    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span><br>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span><br>
        <input asp-for="RememberMe" />@Html.DisplayNameFor(a => a.RememberMe)<br>
        <a asp-action="Register" asp-controller="Account">Create Account</a><br>
        <input type="submit" value="Login" />
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}