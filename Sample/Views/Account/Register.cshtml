@using Sample.Models.ViewModel

@model RegisterVm

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid d-flex flex-row h-100 w-100 justify-content-between align-items-center body">
  
    <div class="container-fluid d-flex justify-content-center align-items-center" style="width:30%; height:80%;">

        <form asp-action="Register" method="post" class="d-flex flex-column justify-content-center">
            <h2 class="text-center mb-5">Register</h2>
            <div asp-validation-summary="ModelOnly"></div>

            <input asp-for="Name" placeholder="Name" class="form-control form-control-sm" autocomplete="off"/>
            <span asp-validation-for="Name" class="text-danger"></span><br />

            <input asp-for="Email" placeholder="Email" class="form-control form-control-sm" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span><br />

            <input asp-for="Password" placeholder="Password" class="form-control form-control-sm" />
            <span asp-validation-for="Password" class="text-danger"></span><br />

            <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control form-control-sm" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span><br />

            <input type="submit" value="Register" class="btn btn-primary"/><br />

            <a asp-action="Login" asp-controller="Account" class="text-center">Already have an Account ?</a>
        </form>

    </div>

    <div class="container-fluid d-flex flex-row img" style="height:60%; width:50%; ">
        <img src="~/images/register.jpg" />
    </div>
</div>

<style>
    img{
        width:100%;
        position:relative;
        border-radius:15px
    }
    form{
        border: 1px solid #6095A2;
        height: 100%;
        width: 100%;
        overflow-y: auto;
        scrollbar-width : thin;
        border-radius:25px;
        padding: 20%;
    }

   

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}